<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:baselineAligned="false">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_play_button"
            android:id="@+id/playButton" android:layout_gravity="center_horizontal" android:paddingLeft="40dp"
            android:paddingRight="40dp" android:layout_weight="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_radio"
            android:layout_gravity="right" android:layout_weight="0.05" android:text="@string/delete_pref_btn"
            />
</LinearLayout>